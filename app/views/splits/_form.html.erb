<%= form_for(@split) do |f| %>
  <% if @split.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@split.errors.count, "error") %> prohibited this split from being saved:</h2>

      <ul>
      <% @split.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :total %>
    <%= f.text_field :total %>
  </div>
  <div class = "contain">
    <%= f.fields_for :artists do |builder| %>
      <%= render 'artist_fields', :f => builder %>
    <% end %>

    <%= link_to_add_fields "Add Artist", f, :artists %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
